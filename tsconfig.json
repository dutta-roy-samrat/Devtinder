{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@clients/*": ["clients/*"],
      "@routers/*": ["routers/*"],
      "@generated/*": ["generated/*"],
      "@schema-validations/*": ["schema-validations/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@mailer/*": ["mailer/*"]
    }
  },
  "include": ["src"]
}
